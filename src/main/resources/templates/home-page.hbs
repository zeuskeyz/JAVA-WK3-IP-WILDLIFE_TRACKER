    <div class="container py-3 " >
        {{#if animal}}
            <div class="row mx-5">
                {{#each animal}}
                    <div class="card border border-0 col-1 rounded bg-transparent d-flex flex-column align-content-center listItem" style="width: 12rem; height: 12rem">
                        <img src="images/animals/{{animal}}.jpeg" class="card-img-top img-fluid border-light rounded shadow-lg m-0" alt="" style="width: 12rem; height: 12rem">
                        <div class="my-2">
                            <div class=""><a href="/sighting/{{animal}}" class="stretched-link text-decoration-none text-light"><h6 class="card-title text-center">{{animal}}</h6></a></div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="text-center my-5 py-5">
                <a href="/add-animal" class="my-5 text-decoration-none text-light display-2">ADD ANIMAL <br><i class="bi bi-plus-circle-fill"></i></a>
